<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">#ffffff</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textColorPrimary">#ffffff</item>
    </style>

    <!-- Bottom Navigation Menu's styles for active and inactive items -->
    <style name="BottomNavigationViewTextStyleUnSelected">

        <item name="android:textSize">9sp</item>
        <item name="android:color">@color/unchecked_item_colour</item>

    </style>

    <style name="BottomNavigationViewTextStyleSelected">

        <item name="android:textSize">9sp</item>
        <item name="android:color">@color/colorPrimary</item>

    </style>

    <style name="AppMaterialTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>    </style>

    <!-- Theme for the AlertDialog -->
    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert"> <!-- Used for the buttons -->
        <item name="android:textStyle">bold</item>
        <item name="colorAccent">@color/Information_Tint</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/Information_Tint</item>
        <!-- Used for the background -->
        <item name="android:background">@android:color/white</item>
    </style>

</resources>
